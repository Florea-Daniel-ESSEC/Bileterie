<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bileterie.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="balerina.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description= "balerina standing on one leg" />

            <Label
                Text="Bine te-am gasit, drag invitat!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Ne face placere sa te primim in oricare dintre locatiile noastre."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="warm welcome" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
